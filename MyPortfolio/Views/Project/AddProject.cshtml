@model EntityLayer.Concrete.Projects

@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/> <br/>
<div class="card-header border-0">
    <h3 class="mb-0">Proje Ekleme Sayfası</h3>
</div>
@using (Html.BeginForm("AddProject", "Project", FormMethod.Post))
{
    @Html.HiddenFor(x =>x.project_id)
    <br/>
    <br/>
    <br/>
    <br/>
    @Html.Label("Proje Adı")
    @Html.TextBoxFor(x => x.title, new{@class="form-control"})
    @Html.ValidationMessageFor(x => x.title)
    <br/>
    @Html.Label("Açıklaması")
    @Html.TextBoxFor(x => x.description, new{@class="form-control"})
    @Html.ValidationMessageFor(x => x.description)

    <br/>
    @Html.Label("Github Linki")
    @Html.TextBoxFor(x => x.githubLink, new{@class="form-control"})
    @Html.ValidationMessageFor(x => x.githubLink)

    <br/>
    @Html.Label("Kullanılan Teknolojiler")
    @Html.TextBoxFor(x => x.technologies, new{@class="form-control"})
    @Html.ValidationMessageFor(x => x.technologies)
    <br/>
    <br/>
    @Html.Label("Görsel Linki")
    @Html.TextBoxFor(x => x.imageUrl, new{@class="form-control"})
    @Html.ValidationMessageFor(x => x.imageUrl)
    <br/>
    <button type="submit" class="btn btn-success">Ekle </button>
}